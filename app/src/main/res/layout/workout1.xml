<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/workout_1_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일주일 동안 운동을 몇 번 하십니까?"/>
        <RadioGroup
            android:layout_below="@id/workout_1_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
            android:layout_below="@id/workout_1_question"
            android:id="@+id/workout_11"
            android:text="주 5~7회"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/workout_11"
                android:id="@+id/workout_12"
                android:text="주 3~4회"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/workout_12"
                android:id="@+id/workout_13"
                android:text="주 1~2회"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/workout_13"
                android:id="@+id/workout_14"
                android:text="거의 안한다"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>