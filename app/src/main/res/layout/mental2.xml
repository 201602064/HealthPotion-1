<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mental_2_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연속적으로 2주 이상 일상생활에 지장이 있을 정도로 슬프거나 절망감 등을 느낀 적이 있습니까?"/>
        <RadioGroup
            android:layout_below="@id/mental_2_question"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/mental_21"
                android:text="예"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/mental_21"
                android:id="@+id/mental_22"
                android:text="아니오"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>



    </RelativeLayout>


</android.support.constraint.ConstraintLayout>