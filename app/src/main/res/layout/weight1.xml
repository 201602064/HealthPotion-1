<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/weight_1_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 본인의 체형이 어떻다고 생각하십니까?"/>
        <RadioButton
            android:layout_below="@id/weight_1_question"
            android:id="@+id/weight_11"
            android:text="매우 마른 편이다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_below="@id/weight_11"
            android:id="@+id/weight_12"
            android:text="약간 마른 편이다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_below="@id/weight_12"
            android:id="@+id/weight_13"
            android:text="보통이다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_below="@id/weight_13"
            android:id="@+id/weight_14"
            android:text="약간 비만이다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_below="@id/weight_14"
            android:id="@+id/weight_15"
            android:text="매우 비만이다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>