<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/smoke_2_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 한달동안 담배를 끊고자 하루(24시간) 이상 금연한 적이 있습니까?"/>
       <RadioGroup
           android:layout_below="@id/smoke_2_question"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <RadioButton

               android:id="@+id/smoke_21"
               android:text="예"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <RadioButton
               android:layout_below="@id/smoke_21"
               android:id="@+id/smoke_22"
               android:text="아니오"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RadioGroup>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>