<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sleep_5_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠버릇이 있습니까? (잠꼬대, 코골이, 이갈이 등)"/>
        <RadioGroup
            android:layout_below="@id/sleep_5_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton

                android:id="@+id/sleep_51"
                android:text="예"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/sleep_51"
                android:id="@+id/sleep_52"
                android:text="아니오"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
