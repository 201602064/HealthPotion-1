<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/teeth_6_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 입안에 특별한 문제는 없으나 구강 건강상태를 알아보기 위해 구강 검진을 받은 적이 있습니까?"/>
        <RadioGroup
            android:layout_below="@id/teeth_6_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_below="@id/teeth_6_question"
                android:id="@+id/teeth_61"
                android:text="예"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/teeth_61"
                android:id="@+id/teeth_62"
                android:text="아니오"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>