<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/smoke_1_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금까지 살아오는 동안 피운 담배의 양은 총 얼마나 됩니까?"/>
        <RadioGroup
            android:layout_below="@id/smoke_1_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton

                android:id="@+id/smoke_11"
                android:text="5갑(100개비) 미만"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/smoke_11"
                android:id="@+id/smoke_12"
                android:text="5갑(100개비) 이상"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/smoke_12"
                android:id="@+id/smoke_13"
                android:text="피운 적 없다"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>