<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mental_5_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 실제로 자살 시도를 해 본적이 있습니까?"/>

        <RadioGroup
            android:layout_below="@id/mental_5_question"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/mental_51"
                android:text="예"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/mental_51"
                android:id="@+id/mental_52"
                android:text="아니오"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>



    </RelativeLayout>


</android.support.constraint.ConstraintLayout>