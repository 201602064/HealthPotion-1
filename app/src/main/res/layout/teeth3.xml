<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/teeth_3_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동중이나 사고로 인해 치아가 다치거나 부러진 적이 있습니까?"/>
        <RadioGroup
            android:layout_below="@id/teeth_3_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_below="@id/teeth_3_question"
                android:id="@+id/teeth_31"
                android:text="예"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/teeth_31"
                android:id="@+id/teeth_32"
                android:text="아니오"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>