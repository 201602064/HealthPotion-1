<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mental_1_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평소 일상생활 중에 스트레스를 어느정도 느끼고 있습니까?"/>
        <RadioButton
            android:layout_below="@id/mental_1_question"
            android:id="@+id/mental_11"
            android:text="대단히 많이 느낀다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_below="@id/mental_11"
            android:id="@+id/mental_12"
            android:text="많이 느끼는 편이다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_below="@id/mental_12"
            android:id="@+id/mental_13"
            android:text="조금 느끼는 편이다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_below="@id/mental_13"
            android:id="@+id/mental_14"
            android:text="거의 느끼지 않는다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>