<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/smoke_7_question_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간접흡연"/>
        <TextView
            android:layout_below="@+id/smoke_7_question_sub"
            android:id="@+id/smoke_7_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 공공장소의 실내(흡연실 제외)에서 다른 사람이 피우는 담배연기를 맡은 적이 있습니까?"/>
        <RadioGroup
            android:layout_below="@id/smoke_7_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton

                android:id="@+id/smoke_71"
                android:text="예"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_below="@id/smoke_71"
                android:id="@+id/smoke_72"
                android:text="아니오"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RadioGroup>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>